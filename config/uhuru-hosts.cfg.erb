    check_command           get_cf_metric!<%= service[:os] %>!$HOSTADDRESS$!<%= service[:component] %>!<%= service[:metric] %>!$HOSTNAME$!$_HOSTDEPLOYMENT$!$_HOSTJOB!$_HOSTINDEX$
